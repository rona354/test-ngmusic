{
  "extends": "stylelint-config-recommended",
  "rules": {
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "extends",
        "tailwind",
        "apply",
        "responsive",
        "variants",
        "screen",
        "layer"
      ]
    }],
    "block-no-empty": true,
    
    "unit-whitelist": ["em", "rem", "s", "px"]
  }
}